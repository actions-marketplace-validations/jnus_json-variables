{
  "Variables": [
    {
      "Name": "HostName",
      "Value": "someDevHostName",
      "Scope": {
        "Environment": [
          "Dev"
        ]
      }
    },
    {
      "Name": "HostName",
      "Value": "someDevTestHostName",
      "Scope": {
        "Environment": [
          "DevTest"
        ]
      }
    },
    {
      "Name": "Url",
      "Value": "https://#{HostName}.com",
      "Scope": {}
    },
    {
      "Name": "SecretA",
      "Value": "${{secrets.REPO_SECRET_A}}",
      "Scope": {}
    },
    {
      "Name": "ConnectionString",
      "Value": "username=user;password=#{SecretA}",
      "Scope": {}
    },
    {
      "Name": "Environment",
      "Value": "#{Scope.Environment}",
      "Scope": {}
    }
  ]
}